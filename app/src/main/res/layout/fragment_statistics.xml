<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearParent"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/buttonAges"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:text="@string/statistics_age_title" />

    <View
        android:background="?android:attr/listDivider"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/buttonSign"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:text="@string/statistics_sign_title" />

    <View
        android:background="?android:attr/listDivider"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/buttonMonth"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:text="@string/statistics_month_title" />

    <View
        android:background="?android:attr/listDivider"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/buttonWeek"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:text="@string/statistics_week_title" />

    <View
        android:background="?android:attr/listDivider"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/buttonFailLog"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:text="@string/statistics_fail_title" />

</LinearLayout>